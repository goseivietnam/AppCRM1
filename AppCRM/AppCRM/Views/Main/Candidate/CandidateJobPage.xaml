                                                            <Label Text="{Binding Salary, StringFormat='${0}'}" FontSize="11"/>
                                                            <Label Text="{Binding Location}" FontSize="11"/>
                                                        </StackLayout>
                                                        <Frame HeightRequest="30" WidthRequest="130" CornerRadius="15" Margin="0" Padding="0" BackgroundColor="#E6F9F0" IsClippedToBounds="True" HorizontalOptions="Start">
                                                            <Label Text="Reference Check" TextColor="#43BE61" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                        </Frame>
                                                    </StackLayout>
                                                    <StackLayout Grid.Column="2" Padding="0">
                                                        <Button Image="three_dots_vertical.png" BackgroundColor="Transparent" WidthRequest="30" HeightRequest="30"/>
                                                        <Label Text="{Binding DayRemain, StringFormat=' {0}d'}" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" TextColor="#AFB4BC"/>
                                                    </StackLayout>
                                                </Grid>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <ListView ItemsSource="{Binding Job.AssessmentJobs}" RowHeight="120" HeightRequest="{Binding AssessmentJobListViewHeightRequest}"
                                          behaviors:ItemTappedCommandListView.ItemTappedCommand="{Binding JobListViewCommand}" VerticalOptions="Start">
                                    <ListView.Header>
                                        <Frame BackgroundColor="#F9F9F9" HasShadow="False" Padding="15,10" BorderColor="#DEE2E6">
                                            <Label TextColor="#7F8890" Text="{Binding Job.AssessmentJobs.Count, StringFormat='ASSESSMENT ({0})'}" FontSize="12"/>
                                        </Frame>
                                    </ListView.Header>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell>
                                                <Grid Padding="10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="70"/>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="40"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackLayout Grid.Column="0">
                                                        <Image HorizontalOptions="CenterAndExpand" Source="{Binding ImageSource}" WidthRequest="40" HeightRequest="40"/>
                                                    </StackLayout>
                                                    <StackLayout Grid.Column="1">
                                                        <Label Text="{Binding JobName}"/>
                                                        <Label Text="{Binding CompanyName}"/>
                                                        <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                                                            <Image IsVisible="{Binding IsFavorite}" Source="img_favorite_job.png" WidthRequest="12" HeightRequest="12"/>
                                                            <Label Text="{Binding JobType}" FontSize="11"/>
                                                            <Label Text="{Binding Salary, StringFormat='${0}'}" FontSize="11"/>
                                                            <Label Text="{Binding Location}" FontSize="11"/>
                                                        </StackLayout>
                                                        <Frame HeightRequest="30" WidthRequest="110" CornerRadius="15" Margin="0" Padding="0" BackgroundColor="#FDF0E9" IsClippedToBounds="True" HorizontalOptions="Start">
                                                            <Label Text="Assessment" TextColor="#F87324" HorizontalOptions="Center" VerticalOptions="Center"/>
                                                        </Frame>
                                                    </StackLayout>
                                                    <StackLayout Grid.Column="2" Padding="0">
                                                        <Button Image="three_dots_vertical.png" BackgroundColor="Transparent" WidthRequest="30" HeightRequest="30"/>
                                                        <Label Text="{Binding DayRemain, StringFormat=' {0}d'}" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" TextColor="#AFB4BC"/>
                                                    </StackLayout>
                                                </Grid>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <ListView ItemsSource="{Binding Job.ShortlistJobs}" RowHeight="120" HeightRequest="{Binding ShortlistJobListViewHeightRequest}"
                                          behaviors:ItemTappedCommandListView.ItemTappedCommand="{Binding JobListViewCommand}" VerticalOptions="Start">
                                    <ListView.Header>
                                        <Frame BackgroundColor="#F9F9F9" HasShadow="False" Padding="15,10" BorderColor="#DEE2E6">
                                            <Label TextColor="#7F8890" Text="{Binding Job.ShortlistJobs.Count, StringFormat='SHORTLIST ({0})'}" FontSize="12"/>
                                        </Frame>
                                    </ListView.Header>
                                    <ListView.ItemTemplate>
